<div class="col s12 m8 offset-m2 l6 offset-l3">
  <div class="card-panel grey lighten-5 z-depth-1">
    <div class="row valign-wrapper">
      <div class="col s2">
        <%= image_tag @user.image.thumb, class: "circle responsive-img" %>
      </div>
      <div class="col s10">
        <h3 class="flow-text"><%= @user.username%></h3>
        <% if user_signed_in? %>
          <% if @user.id == current_user.id %>
            <span class="black-text">
              <%= link_to "プロフィールを編集する", edit_user_registration_path(@user), method: :get %>
            </span>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<%= render partial: "shared/shops", object: @shops, as: :shops %>
<%= render partial: "shared/shops", object: @liked_shops, as: :shops %>
<%= paginate(@shops)%>