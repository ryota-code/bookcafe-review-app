<div class="col s12 m6 l6">
  <ul id="tabs-swipe-demo" class="tabs">
    <li class="tab col s3"><a class="active" href="#test-swipe-1">地図</a></li>
    <li class="tab col s3"><a href="#test-swipe-2">コメント</a></li>
  </ul>
  <div id="test-swipe-1" class="col s12">
    <div class="row">
      <div class="card">
        <%= render "shared/gmap-show"%>
      </div>
    </div>
  </div>
  <div id="test-swipe-2" class="col s12">
    <div class="row">
      <%# コメント一覧 %>
      <div class="col s12">
        <div class="card" style="max-height: 40vw;overflow: scroll;">
          <div id="comments_area">
              <%= render partial: 'shared/comment-index', locals: { comments: @comments } %>
          </div>
        </div>
      </div>
      <%# コメント投稿 %>
      <% if user_signed_in? %>
        <div class="col s12">
          <div class="card" style="max-height: 50vw;overflow: scroll;">
            <%= render partial: 'shared/form-comment', locals: { comment: @comment, shop: @shop } %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
$(document).ready(function(){
    $('.tabs').tabs();
  });
</script>