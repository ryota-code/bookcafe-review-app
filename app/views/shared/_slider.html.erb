<div class="slider">
  <ul class="slides">
      <% shops.each do |shop| %>
        <li>
          カフェ一覧
          <%= image_tag shop.image %>
          <div class="caption center-align">
            <%= link_to shop_path(shop), method: :get,class: "underline" do%>
              <%= shop.name %>
            <% end %>
          </div>
        </li>
      <% end %>
  </ul>
</div>

<script>
    $(document).ready(function(){
    $('.slider').slider({
      indicators: false
    });
  });
</script>