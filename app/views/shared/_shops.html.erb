<% @shops.each do |shop| %>
      <div class = "shops">
        <div class = "shops__text">
          <p class = "shops__text--name" ><%= link_to "#{shop.name}", shop_path(shop), method: :get %></p>
          <P class = "shops__text--intro" ><%= shop.text %></P> 
        </div>
        <p class = "shops__image" ><%= image_tag shop.image %></p>
      </div>
    <%end%>
